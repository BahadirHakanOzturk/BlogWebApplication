@model IEnumerable<AppRole>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>Roller</h5>
				</div>
				<div class="ibox-content">

					<table class="table table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>Başlık</th>
								<th>Sil</th>
								<th>Düzenle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th>@item.Id</th>
									<td>@item.Name</td>
									<td><a href="/Admin/Role/Delete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Admin/Role/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Admin/Role/Add" class="btn btn-outline-primary">Yeni Rol Ekle</a>
					<a href="/Admin/Role/ListUserRole" class="btn btn-outline-primary">Kullanıcı Rol Listesi</a>
				</div>
			</div>
		</div>
	</div>
</div>

