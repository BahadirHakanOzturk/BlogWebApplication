@model IEnumerable<Blog>

<h1>Yazarın Blogları</h1>
<table class="table tablebordered">
	<tr>
		<th>#</th>
		<th>Blog Başlığı</th>
		<th>Oluşturma Tarihi</th>
		<th>Kategori</th>
		<th>Durum</th>
		<th>Sil</th>
		<th>Düzenle</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<th>@item.Id</th>
			<td>@item.Title</td>
			<td>@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
			<td>@item.Category.Name</td>
			<td>
				@if (@item.Status)
				{
					<span class="badge badge-success">Aktif</span>
				}
				else
				{
					<span class="badge badge-secondary">Pasif</span>
				}
			</td>
			<td><a href="/Writer/Blog/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
			<td><a href="/Writer/Blog/Edit/@item.Id" class="btn btn-warning">Düzenle</a></td>
		</tr>
	}
</table>
<a href="/Writer/Blog/Add/" class="btn btn-primary">Yeni Blog Oluştur</a>