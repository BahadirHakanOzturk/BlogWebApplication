@model IEnumerable<Blog>

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Son 10 Blog</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th> Başlık </th>
								<th class="text-center"> Kategori </th>
								<th class="text-center"> Tarih </th>
								<th class="text-center"> Detaylar </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="@item.ImageUrl" class="mr-2" alt="image"> @item.Title
									</td>
									@if (@item.Category.Name == "Teknoloji")
									{
										<td class="text-center">
											<label class="badge badge-gradient-success">Teknoloji</label>
										</td>
									}
									else if (@item.Category.Name == "Yazılım")
									{
										<td class="text-center">
											<label class="badge badge-gradient-dark">Yazılım</label>
										</td>
									}
									else if (@item.Category.Name == "Oyun")
									{
										<td class="text-center">
											<label class="badge badge-gradient-primary">Oyun</label>
										</td>
									}
									else if (@item.Category.Name == "Film")
									{
										<td class="text-center">
											<label class="badge badge-gradient-info">Film</label>
										</td>
									}
									else
									{

										<td class="text-center">
											<label class="badge badge-gradient-secondary">@item.Category.Name</label>
										</td>

									}
									<td class="text-center">@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
									<td class="text-center">
										<a href="/Blog/ReadAll/@item.Id" class="btn btn-dark">Detaylar</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>