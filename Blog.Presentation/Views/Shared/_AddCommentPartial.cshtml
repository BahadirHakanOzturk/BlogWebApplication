<div class="comment-top">
	<h4>Bir yorum yapın</h4>
	<div class="comment-bottom">
		<form method="post">
			<input class="form-control" type="text" id="txtUserName" name="UserName" placeholder="Adınız Soyadınız" required="">
			<input class="form-control" type="text" id="txtTitle" name="Title" placeholder="Başlık" required="">
			<textarea class="form-control" id="txtContent" name="Content" placeholder="Yorumunuz..." required=""></textarea>
			<input type="hidden" id="txtBlogId" value="@TempData["Id"]" />

			<button type="submit" id="btnAddComment" class="btn btn-primary submit">Yorum Yap</button>
		</form>
	</div>
</div>


<script type="text/javascript">

	$("#btnAddComment").click(function () {

		let comment = {
			UserName: $("#txtUserName").val(),
			Title: $("#txtTitle").val(),
			Content: $("#txtContent").val(),
			BlogId: $("txtBlogId").val()
		};

		$.ajax({
			type: "Post",
			dataType: "json",
			url: "/Comment/Add",
			data: comment,
			success: function (data) {				
				alert("Yorumunuz başarıyla eklendi.")
			}
		});
	});

</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>