<div class="tech-btm">
	<p>Teknoloji, yazılım ve diğer bloglar...</p>
	<form method="post">
		<input type="email" id="txtMail" name="Mail" class="tech-btm">
		<input type="submit" id="btnSubscribe" value="Abone Ol">
	</form>
</div>


<script type="text/javascript">
	$("#btnSubscribe").click(function () {
		let newsLetter = {
			Mail: $("#txtMail").val()
		};

		$.ajax({
			type: "Post",
			dataType: "json",
			url: "/NewsLetter/SubscribeMail",
			data: newsLetter,
			success: function (data) {
				let result = jQuery.parseJSON(data);
				alert("Abonelik işleminiz başarıyla gerçekleşti.");
			}
		});
	});
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>